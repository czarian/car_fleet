<div class="panel-heading">
        <h1><%= @car.brand %></h1>
        <h3><%= "Registration number: #{@car.reg_number}" %></h3>
        <h6><%= "Created at #{@car.updated_at}" %></h6>
        <h6>
          <span><%= "Avarage milages: #{@car.mileages.presence ? @car.mileages.average(:value).round : "0"}" %></span>
          <span><%= "Full milages: #{@car.mileages.sum(:value).round}"%></span>
        </h6>


        <%= render 'mileages/index', mileages: @car.mileages %>
        <% if user_signed_in? %>
          <%= render 'mileages/form', mileage: Mileage.new(car_id: @car.id) %>
        <% end %>
</div>
