<%= form_for(mileage) do |f| %>

    <%= f.hidden_field :car_id %>
    <div class="form-group">
      <%= f.label :value, 'Number of kilometers' %>
      <%= f.text_field :value, autocomplete: "off", class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :month, 'Select month' %>
      <%= select_month(Date.today, field_name: 'month', prefix: 'mileage') %>
    </div>

    <div class="actions">
      <%= f.submit "Add mileage", class: "btn btn-primary"  %>
    </div>

<% end %>
